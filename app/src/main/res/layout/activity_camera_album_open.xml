<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/btn_camera_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Camera open"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/btn_album_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_camera_open"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Album open"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/btn_file_chooser_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_album_open"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onClick"
        android:text="File chooser open"
        />
    <Button
        android:id="@+id/btn_create_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_file_chooser_open"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onClick"
        android:text="create temp"
        />
    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_file_chooser_open"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ImageView
        android:id="@+id/img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_file_chooser_open"
        app:layout_constraintLeft_toRightOf="@+id/img"
        />
    <ImageView
        android:id="@+id/img3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_file_chooser_open"
        app:layout_constraintLeft_toRightOf="@+id/img2"
        />
    <ImageView
        android:id="@+id/img4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_file_chooser_open"
        app:layout_constraintLeft_toRightOf="@+id/img3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>